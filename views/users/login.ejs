<% layout("/layouts/boilerplate") -%>

<div class="row mt-2 mb-3">
    <h2 class="col-6 offset-3">Login</h2>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input class="form-control" type="text"name="username" placeholder="enter username"id="username" required>
            </div>
             <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input class="form-control" type="password"name="password" placeholder="enter password"id="email" required>
             </div>
        <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>